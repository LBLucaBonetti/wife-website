{
  "name": "wife-website",
  "version": "1.0.0",
  "description": "My wife's website",
  "scripts": {
    "build": "npm run css",
    "css": "npm-run-all css-compile css-prefix",
    "css-compile": "sass --style compressed --source-map --embed-sources --no-error-css --load-path=node_modules scss/:css/",
    "css-prefix": "postcss --replace css/styles.css --use autoprefixer --map",
    "test": "npm-run-all css-lint css",
    "css-lint": "stylelint scss/",
    "start": "npm-run-all --parallel watch server",
    "watch": "nodemon -e html,scss -x \"npm run css\"",
    "server": "sirv --dev --no-clear --port 3000"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LBLucaBonetti/wife-website.git"
  },
  "author": "Luca Bonetti (LBLucaBonetti)",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/LBLucaBonetti/wife-website/issues"
  },
  "homepage": "https://github.com/LBLucaBonetti/wife-website#readme",
  "dependencies": {
    "@popperjs/core": "^2.11.8",
    "bootstrap": "^5.3.1"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.15",
    "nodemon": "^3.0.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.28",
    "postcss-cli": "^10.1.0",
    "sass": "^1.66.1",
    "sirv-cli": "^2.0.2",
    "stylelint": "^15.10.3",
    "stylelint-config-twbs-bootstrap": "^11.0.1"
  }
}
